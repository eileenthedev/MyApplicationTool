    <script>
        // Function to add a new line
        document.getElementById('add-line-btn').addEventListener('click', function() {
            const table = document.getElementById('data-table').getElementsByTagName('tbody')[0];
            const newRow = table.insertRow();

            // Adding cells and contenteditable fields
            const selectCell = newRow.insertCell(0);
            selectCell.innerHTML = '<input type="checkbox">';

            const nameCell = newRow.insertCell(1);
            nameCell.contentEditable = "true";
            nameCell.innerText = "New Name";

            const emailCell = newRow.insertCell(2);
            emailCell.contentEditable = "true";
            emailCell.innerText = "new@example.com";

            const phoneCell = newRow.insertCell(3);
            phoneCell.contentEditable = "true";
            phoneCell.innerText = "000-000-0000";

            const addressCell = newRow.insertCell(4);
            addressCell.contentEditable = "true";
            addressCell.innerText = "New Address";

            const dateCell = newRow.insertCell(5);
            dateCell.contentEditable = "true";
            dateCell.innerText = "2024-08-20";

            const statusCell = newRow.insertCell(6);
            statusCell.contentEditable = "true";
            statusCell.innerText = "Status";

            const actionCell = newRow.insertCell(7);
            actionCell.innerHTML = '<span class="delete-btn material-icons">delete</span>';

            // Add event listener to the new delete button
            actionCell.querySelector('.delete-btn').addEventListener('click', function() {
                table.deleteRow(newRow.rowIndex - 1);
            });
        });

        // Add event listeners to existing delete buttons
        document.querySelectorAll('.delete-btn').forEach(function(deleteBtn) {
            deleteBtn.addEventListener('click', function() {
                const row = deleteBtn.parentNode.parentNode;
                row.parentNode.removeChild(row);
            });
        });
    </script>

